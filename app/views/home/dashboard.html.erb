<h1>Dashboard</h1>
<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>When</th>
      <th>KW</th>
      <th>Hours</th>
      <th>Total availible time</th>
    </tr>
  </thead>
  <tbody>
    <% total = 0
    @items.each do |item| %>
      <tr<%= ' class="success"'.html_safe if item.class == Milestone %>>
        <td><%= item.class.model_name.human %></td>
        <td><%= item_name item %></td>
        <td><%= item.when %></td>
        <td><%= item_kw item %></td>
        <td><%= item_hours(item) %></td>
        <td><%= (total += item_hours(item)).round(2) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
